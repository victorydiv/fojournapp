# Backend Environment Variables
NODE_ENV=development
PORT=3001

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=travel_log
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Google Maps API Key
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# DreamHost VPS Email (Recommended for fojourn.site)
EMAIL_SERVICE=smtp
SMTP_HOST=smtp.dreamhost.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@fojourn.site
SMTP_PASSWORD=your-dreamhost-email-password

# Alternative: Gmail (use App Password, not regular password)
# EMAIL_SERVICE=gmail
# EMAIL_USER=your-email@gmail.com
# EMAIL_APP_PASSWORD=your-gmail-app-password

# Alternative: DreamHost Email Service
# EMAIL_SERVICE=dreamhost
# EMAIL_USER=noreply@fojourn.site
# EMAIL_PASSWORD=your-dreamhost-email-password

# Alternative: SendGrid
# EMAIL_SERVICE=sendgrid
# SENDGRID_API_KEY=your-sendgrid-api-key

# Email From Address
EMAIL_FROM=Travel Log <noreply@fojourn.site>
